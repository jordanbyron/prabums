<h1>Listing notes</h1>

<table>
  <tr>
    <th>Work order</th>
    <th>Created by</th>
    <th>Updated by</th>
    <th>Text</th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%=h note.work_order_id %></td>
    <td><%=h note.created_by_id %></td>
    <td><%=h note.updated_by_id %></td>
    <td><%=h note.text %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New note', new_note_path %>