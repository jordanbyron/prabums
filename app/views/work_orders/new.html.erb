<% title 'New Work Order'%>

<% header do %>
<h1>New Work Order</h1>
<% end %>

<% form_for(@work_order) do |f| %>
  <%= f.error_messages %>
<div class="column_1">
  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :building_id %><br />
    <%= f.select :building_id, Building.all.collect {|b| [b.name, b.id] }, :include_blank => true %>
  </p>
</div>
<div class="column_2">
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :room_number %><br />
    <%= f.text_field :room_number %>
  </p>
</div>
<div class="column_3">
  <p>
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
</div>
<div style="clear:both;">
  <p>
     <%= f.label :location_of_problem %><br />
     <%= f.text_field :location_of_problem, :size => 102 %>
   </p>
   <p>
     <%= f.label :problem %><br />
     <%= f.text_area :problem, :size => "114x10" %>
   </p>
</div>
<div class="footer">
    <%= f.submit 'Submit Work Order' %> <%= link_to_function 'Reset', "$('new_work_order').reset();" %>
</div>
<% end %>